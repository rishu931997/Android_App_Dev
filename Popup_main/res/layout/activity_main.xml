<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rishukumar.popup.MainActivity">

<LinearLayout
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="@color/dim_foreground_material_dark"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:weightSum="1"
    android:id="@+id/layou"
    android:visibility="gone">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Details:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
         />
    <RelativeLayout
        android:layout_width="173dp"
        android:layout_height="173dp"
        android:layout_above="@+id/layou"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_weight="0.85">

        <ImageView
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:src="@drawable/rishuk"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Name: Rishu Kumar"
        android:layout_marginTop="10dp"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Roll No: 841502"
        android:layout_marginTop="10dp"
        android:textColor="@color/abc_input_method_navigation_guard"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" College: NIT Warangal"
        android:layout_marginTop="10dp"
        android:textColor="@color/abc_input_method_navigation_guard"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Address: Warangal,Telangana,India "
        android:layout_marginTop="10dp"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:textColor="#ffffff"
            android:id="@+id/button2"
            android:background="@color/abc_input_method_navigation_guard"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2.54"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop Up"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0101"
        android:background="#ffffff" />

</RelativeLayout>
